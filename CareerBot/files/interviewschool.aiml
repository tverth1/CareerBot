<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    
    <topic name="school interview">

        <category>
            <pattern>^ <set>softwareengineerinterests</set> ^</pattern>
            <template>
                <think>
                    <set name="option">Software Engineer</set>
                    <set name="interest"><star/></set>
                </think>
                <condition name="interest">
                    <li value="applications">Applications are important part of the industry. <br/></li>
                    <li value="software">Software helps customers use the hardware! Very important.<br/></li>
                    <li value="program">Programming takes patience and smarts!<br/></li>
                    <li value="programming">Programming skills are a constant need in the tech industry. Great skill and interest!<br/></li>
                    <li>Those are excellent interests in engineering aspects!<br/></li>
                </condition>
                <srai>SCHOOL QUESTIONS</srai>
            </template>
        </category>

        <category>
            <pattern>^ <set>webdevinterests</set> ^</pattern>
            <template>
                <think>
                    <set name="option">Web Developer</set>
                    <set name="interest"><star/></set>
                </think>
                <condition name="interest">
                    <li value="websites">Websites communicate a companies presence!<br/></li>
                    <li value="marketing">Marketing correctly takes a lot of research!<br/></li>
                    <li value="branding">Branding can change how your product is perceived!<br/></li>
                    <li>Those are excellent interests in design aspects!<br/></li>
                </condition>
                <srai>SCHOOL QUESTIONS</srai>
            </template>
        </category>

        <category>
            <pattern>^ <set>databaseadmininterests</set> ^</pattern>
            <template>
                <think>
                    <set name="option">Database Administrator</set>
                    <set name="interest"><star/></set>
                </think>
                <condition name="interest">
                    <li value="databases">Databases can get big!<br/></li>
                    <li value="collections">Collections require some finesse. You've got what it takes!<br/></li>
                    <li value="organization">Organization is not everyone's best skill. If you're organized you're ahead of the game!<br/></li>
                    <li value="administration">Admin work takes strong leadership skills!<br/></li>
                    <li>Those are excellent interests in data aspects!<br/></li>
                </condition>
                <srai>SCHOOL QUESTIONS</srai>
            </template>
        </category>

        <category>
            <pattern>^ <set>systemsanalystinterests</set> ^</pattern>
            <template>
                <think>
                    <set name="option">Systems Analyst</set>
                    <set name="interest"><star/></set>
                </think>
                <condition name="interest">
                    <li value="information">IT is a rapidly growing field!<br/></li>
                    <li value="analysis">Analysis takes a special skill set.<br/></li>
                    <li value="infrastructure">Analyzing infrastruce helps keep the network running.<br/></li>
                    <li value="computer">Computers will be around for a long time!<br/></li>
                    <li>Those are excellent interests in computer aspects!<br/></li>
                </condition>
                <srai>SCHOOL QUESTIONS</srai>
            </template>
        </category>

        <category>
            <pattern>^ <set>networkarchitectinterests</set> ^</pattern>
            <template>
                <think>
                    <set name="option">Network Architect</set>
                    <set name="interest"><star/></set>
                </think>
                <condition name="interest">
                    <li value="networks">Networks are fascinating.<br/></li>
                    <li value="internet">The internet is a huge network of information.<br/></li>
                    <li value="security">Security is important!<br/></li>
                    <li value="connections">Connections help transfer information within the network and network to network!<br/></li>
                    <li>Those are excellent interests in network aspects!<br/></li>
                </condition>
                <srai>SCHOOL QUESTIONS</srai>
            </template>
        </category>

        <category>
            <pattern>*</pattern>
            <that>DOES THAT SOUND GOOD</that>
            <template>
                Great! <srai>SCHOOL QUESTIONS</srai>
            </template>
        </category>
    
    </topic>
    
</aiml>