<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    
    <category>
        <pattern>HI ^</pattern>
        <template>
            <srai>HELLO ^</srai>
        </template>
    </category>
    
    <category>
        <pattern>HEY ^</pattern>
        <template>
            <srai>HELLO ^</srai>
        </template>
    </category>
        
    <category>
        <pattern>HELLO ^</pattern>
        <template>
            Greetings, I am Todd.<br/> 
            What's your name?
        </template>
    </category>
    
    <category>
        <pattern>I AM *</pattern>
        <that>WHAT IS YOUR NAME</that>
        <template>
            <think>
            <set name="name"><formal><star/></formal></set>
        </think>
            <srai>MY NAME IS *</srai>
        </template>
    </category>
    
    <category>
        <pattern>MY NAME IS *</pattern>
        <that>WHAT IS YOUR NAME</that>
        <think>
            <set name="name"><formal><star/></formal></set>
        </think>
        <template>
            Good day to you, <get name="name"/>.<br/>
            Do you need help selecting a career path?
        </template>
    </category>
    
    <category>
        <pattern>*</pattern>
        <that>WHAT IS YOUR NAME</that>
        <template>
            <think><set name="name"><formal><star/></formal></set></think>
            <srai>MY NAME IS *</srai>
        </template>
    </category>
    
   
    <category>
        <pattern>YES ^</pattern>
        <that>DO YOU NEED HELP CHOOSING A CAREER PATH</that>
        <template>
            <think><set name="topic">school interview</set></think>
            Don't fret, I can help!<br/>
            Let's talk about IT and your career to help you decide. <br/>
            Does that sound good?
        </template>
    </category>

<category>
    <pattern></pattern>
    <template></template>
</category>
</aiml>